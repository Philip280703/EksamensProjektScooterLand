<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ScooterLandBlazorProjekt</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Ordre" @onclick="() => ToggleSubMenu(1)">
                <span class="bi bi-order-nav-menu" aria-hidden="true"></span> Ordre
            </NavLink>

            @if (showSubMenu[1])
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Ordre 1
                        </NavLink>
                    </li>
                </ul>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Mekaniker" @onclick="() => ToggleSubMenu(2)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mekaniker
            </NavLink>

            @if (showSubMenu[2])
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Mekaniker/1">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mekaniker1
                        </NavLink>
                    </li>
                </ul>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool[] showSubMenu = new bool[3];

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleSubMenu(int index)
    {
        for (int i = 0; i < showSubMenu.Length; i++)
        {
            if (i == index)
            {
                showSubMenu[i] = !showSubMenu[i];
            }
            else
            {
                showSubMenu[i] = false;
            }
        }
    }
}
