@using EksamensProjektScooterLandBlazor.Shared.Models
@using EksamensProjektScooterLandBlazor.Client.Services;
@inject NavigationManager NavigationManager;


<tr class="hoverable-row" style="cursor: pointer;" onclick="NavigateToOrdreOversigtComponent(@kunde.KundeID)">
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">@kunde.KundeID</td>
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">@kunde.Fornavn @kunde.Efternavn</td>
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">@kunde.Email</td>
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">+45 @kunde.TelefonNummer</td>
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">@kunde.Mekaniker.Fornavn @kunde.Mekaniker.Efternavn</td>
	<td @onclick="() => NavigateToOrdreOversigtComponent(kunde.KundeID)">@kunde.Mekaniker.scooterBrand.ScooterBrandNavn</td>
	<td>
		<button class="Rediger-knap" style="border: none;" @onclick="() => NavigateToEditKundeComponenet(kunde.KundeID)">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
				<path d="M11 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-7"></path>
				<path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
			</svg>
		</button>
		<button class="Slet-knap" style="border: none;" onclick="@Showmodal">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash">
				<polyline points="3 6 5 6 21 6"></polyline>
				<path d="M19 6L19 19a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2L5 6"></path>
				<line x1="10" y1="11" x2="10" y2="17"></line>
				<line x1="14" y1="11" x2="14" y2="17"></line>
			</svg>
		</button>
	</td>
</tr>	

@if(showmodal == true)
{
	<div id="confirmBox" class="modal hidden">
		<div class="modal-content">
			<h4>Fjern kundeoplysninger</h4>
			<p>Er du sikker på, at du vil slette kundeoplysningerne?</p>
			<p>Kundens id: @kunde.KundeID, kundens navn: @kunde.Fornavn @kunde.Efternavn</p>
			<div class="modal-actions">
				<button class="btn btn-success" onclick="@DeleteKunde">Ja</button>
				<button class="btn btn-danger" onclick="@Showmodal">Nej</button>
			</div>
		</div>
	</div>

}


